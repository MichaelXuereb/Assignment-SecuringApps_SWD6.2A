                        @Html.ActionLink("Delete", "Delete", new { /* id=item.PrimaryKey */ }) |
                        @Html.ActionLink("Upload", "Upload", "Submission", new { id = item.Id })

                    </p>
                    }
                    else
                    {
                        @Html.ActionLink("Upload", "Upload", "Submission", new { id = item.Id })
                    }
                }


            </td>
        </tr>
